{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "lib",
    "jsx": "react",
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es2015"
  },
  "exclude": [
    "node_modules",
    "typings"
  ]
}